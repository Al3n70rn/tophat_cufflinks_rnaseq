{
  "name": "tophat_cufflinks_rnaseq",
  "title": "RNA-Seq Analysis Pipeline",
  "summary": "Maps RNA-Seq data and assesses expression using Tophat/Cufflinks toolkit.",
  "categories": ["RNA-Seq"],
  "dxapi": "1.0.0",
  "inputSpec": [
    {"name": "reads", "label": "Reads", "class": "array:gtable", "type": "LetterReads"},
    {"name": "tophat_options", "label": "Tophat Options", "class": "string", "default": "-g 1 --b2-very-fast --no-coverage-search --segment-length 100 --no-novel-juncs"},
    {"name": "cufflinks_options", "label": "Cufflinks Options", "class": "string", "optional": true},
    {"name": "reference", "label": "Reference", "class": "record", "type": "ContigSet"},
    {"name": "indexed_reference", "label": "Indexed Reference", "class": "record", "type": "BowtieLetterContigSetV2", "optional": true},
    {"name": "gene_model", "label": "Gene Model", "class": "gtable", "type": "Genes"},
    {"name": "output_name", "label": "Output Name", "class": "string", "optional": true}
  ],
  "outputSpec": [
    {"name": "mappings", "label": "Mappings", "class": "gtable", "type": {"$and": ["LetterMappings", "Mappings", "gri"]}},
    {"name": "indexed_reference", "label": "Indexed Reference", "class": "record", "type": "BowtieLetterContigSetV2"},
    {"name": "transcripts", "label": "Expression Levels", "class": "gtable"},
    {"name": "cufflinks_output", "label": "Cufflinks Outputs", "class": "file"}
  ],
  "runSpec": {"file": "RNA_seq_workflow.py", "interpreter": "python2.7", "execDepends": [{"name": "xz-utils"}]},
  "version": "1.0.0",
  "details": {
    "upstreamAuthor": "Cole Trapnell, Ben Langmead, Daehwan Kim, Geo Pertea, Harold Pimentel, Ryan Kelley, Lior Pachter, Steven Salzberg, Adam Roberts, Brian Williams, Ali Mortazavi, Gordon Kwan, Jeltje van Baren, Barbara Wold",
    "upstreamUrl": "http://bioinformatics.igm.jhmi.edu/salzberg/Salzberg/Software.html",
    "upstreamLicenses": ["Boost"],
    "citations": ["doi: 10.1093/bioinformatics/btr355", "doi:10.1186/gb-2009-10-3-r25", "doi: 10.1093/bioinformatics/btp120"]
  }
}
